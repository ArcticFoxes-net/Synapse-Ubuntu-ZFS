{
    "default-runtime": "runsc-kvm",
    "runtimes": {
        "runsc": {
            "path": "/usr/bin/runsc"
        },
        "runsc-kvm": {
            "path": "/usr/bin/runsc",
            "runtimeArgs": [
                "--platform=kvm",
                "--network=host"
            ]
        },
        "runsc-ptrace": {
            "path": "/usr/bin/runsc",
            "runtimeArgs": [
                "--platform=ptrace",
                "--network=host"
            ]
        },
        "runsc-systrap": {
            "path": "/usr/bin/runsc",
            "runtimeArgs": [
                "--platform=systrap",
                "--network=host"
            ]
        }
    }
}
